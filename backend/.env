# 小雪宝AI助手开发环境配置

# 应用配置
APP_NAME=小雪宝AI助手
APP_VERSION=1.0.0
DEBUG=true
TESTING=false

# 安全配置
SECRET_KEY=dev-secret-key-xiaoxuebao-2024-very-long-key-for-development-environment
JWT_SECRET=dev-jwt-secret-xiaoxuebao-2024-very-long-key-for-development-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置 (开发环境使用SQLite)
DATABASE_URL=sqlite:///./xiaoxuebao.db

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379/0

# Elasticsearch配置 (可选)
ELASTICSEARCH_URL=http://localhost:9200

# CORS配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]

# 日志配置
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# 性能配置
WORKERS=1
MAX_CONNECTIONS=50
POOL_SIZE=10
POOL_OVERFLOW=20

# 缓存配置
CACHE_TTL=300
CACHE_MAX_SIZE=100

# 限流配置
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
